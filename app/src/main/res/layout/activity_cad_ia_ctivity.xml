<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="controle.cadastros.ActivityCadInvestidor"

    >










            <ImageButton
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/txtNomeCadIN"
                android:id="@+id/btnselcfoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:background="@drawable/btnredondo"
                android:text="@string/add_foto"
                android:textColor="@android:color/white"
                android:textStyle="bold" />









        <EditText
            android:id="@+id/barnomeCadIN"
            app:layout_constraintTop_toBottomOf="@id/btnselcfoto"
            app:layout_constraintStart_toEndOf="@id/txtNomeCadIN"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/baremailCadIN"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textSize="8pt"
            android:ems="24"
            android:inputType="textPersonName"
            android:hint="Nome Completo"
            tools:ignore="Autofill,HardcodedText,LabelFor"
            />

        <EditText
            android:id="@+id/baremailCadIN"
            android:hint="exemplo@email.com"
            app:layout_constraintTop_toBottomOf="@+id/barnomeCadIN"
            app:layout_constraintStart_toEndOf="@id/txtEmailCadIN"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/barsenhaCadIN"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:textSize="8pt"
            android:layout_gravity="center"
            tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />

        <EditText
            android:id="@+id/barsenhaCadIN"
            app:layout_constraintTop_toBottomOf="@id/baremailCadIN"
            app:layout_constraintStart_toEndOf="@id/txtSenhaIN"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/vlpratimonio"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:ems="10"
            android:textSize="8pt"
            tools:text="xxxxxxxx"
            android:inputType="textPassword"
            tools:ignore="Autofill,LabelFor" />

    <ImageView
        android:id="@+id/txtpatrimonio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_attach_money_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/vlpratimonio"
        app:layout_constraintTop_toTopOf="@id/vlpratimonio"
        app:layout_constraintEnd_toStartOf="@id/vlpratimonio"
        />

        <EditText
            android:id="@+id/vlpratimonio"
            app:layout_constraintTop_toBottomOf="@id/barsenhaCadIN"
            app:layout_constraintStart_toEndOf="@id/txtpatrimonio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnconcluirCadIN"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:textSize="8pt"
            android:inputType="numberDecimal"
            android:hint="Valor do Se patrimonio"
            tools:ignore="Autofill,HardcodedText,LabelFor" />

    <Button
        android:id="@+id/btnconcluirCadIN"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/btnredondo"
        android:text="@string/concluir"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vlpratimonio"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:src="@drawable/ic_person_black_24dp"
        android:id="@+id/txtNomeCadIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nome_completo"
        android:textColor="#eed700"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/barnomeCadIN"
        app:layout_constraintEnd_toStartOf="@id/barnomeCadIN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/barnomeCadIN"
        />

    <ImageView
        android:id="@+id/txtEmailCadIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/baremailCadIN"
        app:layout_constraintTop_toTopOf="@id/baremailCadIN"
        app:layout_constraintBottom_toBottomOf="@id/baremailCadIN"
        android:src="@drawable/ic_email_black_24dp"
         />

    <ImageView
        android:id="@+id/txtSenhaIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_lock_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/barsenhaCadIN"
        app:layout_constraintTop_toTopOf="@+id/barsenhaCadIN"
        app:layout_constraintBottom_toBottomOf="@id/barsenhaCadIN"
         />


</androidx.constraintlayout.widget.ConstraintLayout>



